{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "env": ["DATABASE_URL", "DIRECT_URL", "AUTH_SECRET", "SUPABASE_*", "POSTGRES_*"],
            "dependsOn": ["prisma:generate"]
        },
        "db:seed": {
            "dependsOn": ["db:migrate"],
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "prisma:generate": {
            "inputs": ["./prisma/**/*"]
        }
    }
}
