{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "cache": true,
            "env": ["DATABASE_URL", "DIRECT_URL", "AUTH_SECRET", "SUPABASE_*", "POSTGRES_*"]
        },
        "seed": {
            "dependsOn": ["prisma:migrate:reset"],
            "cache": false
        },
        "prisma:migrate:reset": {
            "cache": false
        }
    }
}
