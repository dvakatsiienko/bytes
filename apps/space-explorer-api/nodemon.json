{
    "restartable": "rs",
    "ext": "ts mts js mjs json",
    "env": {
        "NODE_ENV": "development"
    },
    "ignore": [".git", "node_modules/**/node_modules"],
    "execMap": {
        "ts": "node --loader @swc-node/register/esm",
        "mts": "node --loader @swc-node/register/esm",
        "js": "node --loader @swc-node/register/esm",
        "mjs": "node --loader @swc-node/register/esm"
    },
    "watch": ["src/**/**", "nodemon.json", "package.json"]
}
