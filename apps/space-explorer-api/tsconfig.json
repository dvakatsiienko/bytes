{
    "include": ["."],
    "compilerOptions": {
        /* Module resolution */
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },

        "moduleResolution": "Node",
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "noEmit": true
    }
}
