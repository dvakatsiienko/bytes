{
  "name": "turborepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@3.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start:hackernews": "turbo run start --filter='@hackernews/*'",
    "start:hackernews-api": "turbo run start --filter=@hackernews/api",
    "build:hackernews-ui": "turbo run build --filter='@hackernews/ui'",
    "start:basic": "turbo run start --filter='@basic/*'",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "8.24.0",
    "prettier": "2.7.1",
    "turbo": "^1.9.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.11.0"
  }
}
