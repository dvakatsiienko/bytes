{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["."],
    "exclude": ["dist", "build", "node_modules"],
    "compilerOptions": {
        "jsx": "preserve",
        "noEmit": true,
        "lib": ["DOM", "DOM.ITERABLE", "ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "types": ["@types/react", "@types/react-dom"]
    }
}
