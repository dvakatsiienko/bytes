{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "start": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build", "lint", "typecheck"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "inputs": ["$TURBO_DEFAULT$", "!**/*.css", "!**/*.scss", "!**/*.yaml"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "inputs": ["$TURBO_DEFAULT$", "!**/*.css", "!**/*.scss", "!**/*.yaml"]
        }
    }
}
