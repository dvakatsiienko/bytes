{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^prisma:generate"]
    },
    "serve": { "cache": false, "persistent": true },
    "convex": { "cache": false, "persistent": true },
    "build": {
      "dependsOn": ["^build", "lint", "typecheck", "^prisma:generate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": [
        "$TURBO_DEFAULT$",

        "!.vscode/**",
        "!.cursor/**",
        "!.editorconfig",

        "!CLAUDE.md",
        "!**/**/README.md",

        "!config/biome.*.jsonc",
        "!config/biome.jsonc",
        "!prettier.config.mjs",
        "!lefthook.yaml",
        "!coderabbit.yaml"
      ]
    },
    "lint": {},
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "description": "Checks TypeScript code for errors",
      "inputs": [
        "$TURBO_DEFAULT$",
        "package.json",
        "tsconfig.json",

        "**/*.{ts,tsx}",
        "**/*.d.ts"
      ]
    },

    "prisma:generate": {
      "inputs": ["./prisma/**/*"]
    }
  }
}
